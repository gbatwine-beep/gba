        // 显示城市内容
        function showCity(cityId) {
            document.querySelector('.cities-section').style.display = 'none';
            document.getElementById('city-content-area').style.display = 'block';
            
            const city = cityData[cityId];
            document.getElementById('city-content').innerHTML = city.content;
            
            // 滚动到顶部
            window.scrollTo(0, 0);
        }

        // 返回城市列表
        function showCities() {
            document.getElementById('city-content-area').style.display = 'none';
            document.querySelector('.cities-section').style.display = 'block';
            
            // 滚动到顶部
            window.scrollTo(0, 0);
        }

        // 处理选项选择
        function selectOption(option) {
            alert(`You selected: ${option}`);
            // 这里可以添加更多交互逻辑，比如显示更多内容或跳转到其他部分
        }

        // 绑定点击事件到城市卡片
        document.querySelectorAll('.city-card').forEach(card => {
            card.addEventListener('click', function() {
                const cityId = this.getAttribute('data-city');
                showCity(cityId);
            });
        });
    </script>
